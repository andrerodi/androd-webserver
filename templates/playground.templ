package templates

templ Playground() {
	<div>
		<h1>Playground</h1>
		<p>Here you can play with the code and see the results in real time.</p>
		<div class="row">
			<div class="col-md-6">
				<h2>Code</h2>
				<textarea id="code" class="form-control" rows="10"></textarea>
			</div>
			<div class="col-md-6">
				<h2>Result</h2>
				<div id="result"></div>
			</div>
		</div>
	</div>
}
